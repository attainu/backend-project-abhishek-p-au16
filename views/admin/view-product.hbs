<section>
    <div class="container">
       <div class="row mt-3">
      <a href="admin/add-product" class="btn btn-success ml-auto">addproduct</a>

        <table class="table">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Productname</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">{{this.no}}</th>
      <td>{{this.Name}}</td>
      
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td><img src="/product-image/{{this._id}}.jpg" style="width:50px;height:50px;"> </td>
      <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a></td>
       <td><a href="/admin/delete/{{this._id}}" class="btn btn-danger"   onclick="return confirm('are you want delete{{this.Name}}')">delete</a></td>
    </tr>

    {{/each}}
 
  </tbody>
</table>
    </div>
</section>