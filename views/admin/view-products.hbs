<section>
    <div class="container">
       <div class="row mt-3">
      <a href="admin/add-product" class="btn btn-success ml-auto">addproduct</a>

        <table class="table">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Productname</th>
      <th scope="col">category</th>
      <th scope="col">discription</th>
      <th scope="col">image</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">{{this.no}}</th>
      <td>{{this.name}}</td>
      
      <td>{{this.category}}</td>
      <td>{{this.discription}}</td>
      <td><img src="{{this.image}}" style="width:50px;height:50px;"> </td>
    </tr>
    {{/each}}
 
  </tbody>
</table>
    </div>
</section>